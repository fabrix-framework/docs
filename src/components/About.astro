---
import { Image } from 'astro:assets';
import TailorLogo from "../assets/logo_tailor_color.svg"

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<article class="sl-flex" aria-labelledby="about-heading">
  <small id="about-heading">
    {title}
    <span class="sr-only">Tailor</span>
  </small>
  <Image src={TailorLogo} alt="Fabrix Editor" width={300} />
  <slot />
</article>

<style>
  article {
    max-width: 40rem;
    margin-inline: auto;
    padding-block: 5rem;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.5rem;
  }
  article > :global(*) {
    max-width: 50ch;
    margin-top: 0 !important;
  }
  small {
    color: var(--sl-color-gray-3);
  }
  img {
    margin: 30px 0;
  }
</style>
